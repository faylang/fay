  ghc-options:       -O2
  build-depends:     base >= 4 && < 5,
                     mtl,
                     haskell-src-exts,
                     json,
                     pretty-show,
                     data-default,
                     safe,
                     language-javascript,

                     -- Requirements for the executables which
                     -- `cabal-dev ghci' needs.
                     HUnit,
                     process,
                     filepath,
                     directory,
                     blaze-html,
                     blaze-markup,
                     bytestring,
                     time,
                     groom,
                     options

